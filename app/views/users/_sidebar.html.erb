<section class="author-info row media-block">
  <figure class="media-image">
    <%= image_tag user.avatarUrl, class: 'avatarUrl avatarUrl-64 photo', size: '64' %>
  </figure>
  <hgroup>
    <h3><%= user.nick %></h3>
    <h4><%= begin
              user.positions[group.slug]
            rescue
            end
            %> i <%= group.name %></h4>
  </hgroup>

  <ul class="author-links list">
    <li>
      <%= link_to t('.see_all_posts_by', user: user.nick), posts_path(user: user), class: 'read-more' %>
    </li>
  </ul>
</section>
