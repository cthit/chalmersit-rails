<dl class="tabs" data-tab>
  <% I18n.available_locales.each do |locale| %>
    <dd class="<%= "active" if I18n.locale == locale %>"><%= link_to image_tag("flags/#{locale}.svg", size: "32"), "#lan-#{locale}" %></dd>
  <% end %>
</dl>
<div class="tabs-content">
  <% active = I18n.locale %>
  <% I18n.available_locales.each do |locale| %>
    <% I18n.with_locale(locale) do %>
      <div class="content <%= "active" if active == locale %>" id="lan-<%= locale %>">
        <%= f.input "title_#{locale}", label: Page.human_attribute_name(:title) %>
        <%= f.input "body_#{locale}", as: :text, label: Page.human_attribute_name(:body) %>
        <button class="preview large-12 columns" data-text="#page_body_<%= locale %>" data-title="#page_title_<%= locale %>"><%= t 'preview' %></button>
      </div>
    <% end %>
  <% end %>
</div>
